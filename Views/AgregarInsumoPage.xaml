<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartMenu.Views.AgregarInsumoPage"
             Background="#FFE066"
             Title="Agregar Insumo">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Nuevo Insumo" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
        <Entry Text="{Binding Nombre}" Placeholder="Nombre" Background="wheat"/>
        <Entry Text="{Binding Stock}" Placeholder="Stock" Keyboard="Numeric" Background="wheat"/>
        <Entry Text="{Binding Unidad}" Placeholder="Unidad" Background="wheat"/>
        <Entry Text="{Binding StockMinimo}" Placeholder="Stock MÃ­nimo" Keyboard="Numeric" Background="wheat"/>
        <Entry Text="{Binding Precio}" Placeholder="Precio del proveedor" Keyboard="Numeric" Background="wheat"/>
        <Entry Text="{Binding ProveedorId}" Placeholder="ID del proveedor" Keyboard="Numeric" Background="wheat"/>

        <Button Text="Guardar" Command="{Binding GuardarCommand}" />
    </VerticalStackLayout>
</ContentPage>