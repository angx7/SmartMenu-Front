<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartMenu.Views.proveedoresPage"
             BackgroundColor="#FFE066"
             Title="Proveedores Disponible">
    <VerticalStackLayout BackgroundColor="#FFE066" Padding="20" Spacing="10">

        <!-- Etiqueta fija arriba -->
        <Label Text="Proveedores disponibles"
               FontSize="20"
               FontAttributes="Bold"/>

        <!-- Scroll solo para los proveedores -->
        <ScrollView>
            <VerticalStackLayout x:Name="ProveedoresLayout" Spacing="10" />
        </ScrollView>

    </VerticalStackLayout>
</ContentPage>
