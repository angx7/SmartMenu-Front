<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartMenu.Views.LoginPage"
             Title="Iniciar Sesión"
             BackgroundColor="#F2F2F2">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center" HorizontalOptions="Center">

            <!-- Logo con bordes redondeados -->
            <Frame Padding="0"
                   HeightRequest="120"
                   WidthRequest="120"
                   CornerRadius="20"
                   IsClippedToBounds="True"
                   HasShadow="False"
                   HorizontalOptions="Center"
                   BackgroundColor="Transparent">
                <Image Source="logo.png" Aspect="AspectFill"/>
            </Frame>

            <!-- Card contenedor -->
            <Frame BackgroundColor="#FDE47F" Padding="20" CornerRadius="10" HasShadow="True">

                <VerticalStackLayout Spacing="15">
                    <Label Text="Iniciar Sesión" FontSize="20" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center"/>

                    <Label Text="Correo Electrónico:" FontSize="14" TextColor="Black"/>
                    <Entry Placeholder="ejemplo@correo.com"
                           Text="{Binding Usuario}"
                           Keyboard="Email"
                           BackgroundColor="#F4F4F4"
                           TextColor="#000000" />

                    <Label Text="Contraseña:" FontSize="14" TextColor="Black"/>
                    <Entry Placeholder="••••••"
                           Text="{Binding Contrasena}"
                           IsPassword="True"
                           BackgroundColor="#F4F4F4"
                           TextColor="#000000" />

                    <Label Text="¿Olvidaste tu contraseña?" FontSize="12" TextColor="Blue" HorizontalOptions="Start"/>
                    <Label Text="¿No tienes cuenta? " FontSize="12" TextColor="Black">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding RegisterCommand}" />
                        </Label.GestureRecognizers>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="¿No tienes cuenta? "/>
                                <Span Text="Regístrate" TextColor="Blue" FontAttributes="Bold"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>

            </Frame>

            <!-- Botón -->
            <Button Text="Iniciar sesión"
                    Command="{Binding LoginCommand}"
                    BackgroundColor="#D62828"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="20"
                    Padding="12,10"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
