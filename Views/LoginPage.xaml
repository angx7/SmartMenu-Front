<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartMenu.Views.LoginPage"
             Title="Iniciar Sesión"  
             BackgroundColor="Black">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

            <Label Text="SmartMenu" FontSize="32" FontAttributes="Bold" HorizontalOptions="Center" TextColor="White"/>
            <Label Text="Bienvenido" FontSize="20" HorizontalOptions="Center" TextColor="White"/>

            <Entry Placeholder="Usuario"
                   Text="{Binding Usuario}" 
                   Background="White"/>

            <Entry Placeholder="Contraseña"
                   Background="White"
                   IsPassword="True"
                   Text="{Binding Contrasena}" />

            <Button Text="Iniciar Sesión"
                    Command="{Binding LoginCommand}"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="10"
                    Padding="10" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>