<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartMenu.Views.InventarioPage"
             Title="InventarioPage"
             BackgroundColor="Red">
    <ScrollView>
        <Grid Padding="30" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Text="Inventario"
                   FontSize="36"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Start"
                   Margin="0,20,0,0"
                   TextColor="White"
                   Grid.Row="0" />

            <BoxView Grid.Row="1" />

            <Button Text="Comida 1"
                    Command="{Binding NavigateToProductDetailCommand}"
                    CommandParameter="Comida 1"
                    BackgroundColor="#FFE066"
                    TextColor="Black"
                    CornerRadius="10"
                    Padding="15"
                    Grid.Row="2" />

            <Button Text="Comida 2"
                    Command="{Binding NavigateToProductDetailCommand}"
                    CommandParameter="Comida 2"
                    BackgroundColor="#FFE066"
                    TextColor="Black"
                    CornerRadius="10"
                    Padding="15"
                    Grid.Row="3" />

            <Button Text="Comida 3"
                    Command="{Binding NavigateToProductDetailCommand}"
                    CommandParameter="Comida 3"
                    BackgroundColor="#FFE066"
                    TextColor="Black"
                    CornerRadius="10"
                    Padding="15"
                    Grid.Row="4" />

            <Button Text="Comida 4"
                    Command="{Binding NavigateToProductDetailCommand}"
                    CommandParameter="Comida 4"
                    BackgroundColor="#FFE066"
                    TextColor="Black"
                    CornerRadius="10"
                    Padding="15"
                    Grid.Row="5" />

            <Button Text="Comida 5"
                    Command="{Binding NavigateToProductDetailCommand}"
                    CommandParameter="Comida 5"
                    BackgroundColor="#FFE066"
                    TextColor="Black"
                    CornerRadius="10"
                    Padding="15"
                    Grid.Row="6" />

            <Button Text="Comida 6"
                    Command="{Binding NavigateToProductDetailCommand}"
                    CommandParameter="Comida 6"
                    BackgroundColor="#FFE066"
                    TextColor="Black"
                    CornerRadius="10"
                    Padding="15"
                    Grid.Row="7" />
        </Grid>
    </ScrollView>
</ContentPage>