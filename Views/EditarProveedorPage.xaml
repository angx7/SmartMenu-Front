            <Entry Text="{Binding Contacto}" Placeholder="Contacto"  BackgroundColor="White" TextColor="Black"/>
            <Entry Text="{Binding Telefono}" Placeholder="TelÃ©fono" Keyboard="Telephone"  BackgroundColor="White" TextColor="Black"/>
